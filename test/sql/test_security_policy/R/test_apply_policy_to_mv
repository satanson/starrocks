-- name: test_apply_policy_to_mv
create database test_apply_policy_to_mv;
-- result:
-- !result
use test_apply_policy_to_mv;
-- result:
-- !result
create masking policy mp as (v1 bigint) returns bigint -> v1 + 1;
-- result:
-- !result
create row access policy rp as (v1 bigint) returns boolean -> true;
-- result:
-- !result
CREATE TABLE `t0` (
  `v1` bigint(20) NULL COMMENT "",
  `v2` bigint(20) NULL COMMENT "",
  `v3` bigint(20) NULL COMMENT ""
) ENGINE=OLAP
DUPLICATE KEY(`v1`, `v2`, `v3`)
DISTRIBUTED BY RANDOM
PROPERTIES (
"replication_num" = "1",
"in_memory" = "false",
"enable_persistent_index" = "false",
"replicated_storage" = "true",
"compression" = "LZ4"
);
-- result:
-- !result
create materialized view mv distributed by hash(v1) buckets 10 REFRESH ASYNC as select * from t0;
-- result:
-- !result
alter materialized view mv modify column v1 set masking policy mp;
-- result:
-- !result
select * from starrocks.policy_references where POLICY_DATABASE="test_apply_policy_to_mv";
-- result:
test_apply_policy_to_mv	mp	Column Masking	default_catalog	test_apply_policy_to_mv	mv	v1
-- !result
alter materialized view mv modify column v1 unset masking policy;
-- result:
-- !result
select * from starrocks.policy_references where POLICY_DATABASE="test_apply_policy_to_mv";;
-- result:
-- !result
alter materialized view mv add row access policy rp;
-- result:
-- !result
select * from starrocks.policy_references where POLICY_DATABASE="test_apply_policy_to_mv";;
-- result:
test_apply_policy_to_mv	rp	Row Access	default_catalog	test_apply_policy_to_mv	mv	None
-- !result
alter materialized view mv drop row access policy rp;
-- result:
-- !result
select * from starrocks.policy_references where POLICY_DATABASE="test_apply_policy_to_mv";;
-- result:
-- !result