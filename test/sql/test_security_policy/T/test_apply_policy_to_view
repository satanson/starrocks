-- name: test_apply_policy_to_view
create database test_apply_policy_to_view;
use test_apply_policy_to_view;
create masking policy mp as (v1 bigint) returns bigint -> v1 + 1;
create row access policy rp as (v1 bigint) returns boolean -> true;

CREATE TABLE `t0` (
  `v1` bigint(20) NULL COMMENT "",
  `v2` bigint(20) NULL COMMENT "",
  `v3` bigint(20) NULL COMMENT ""
) ENGINE=OLAP
DUPLICATE KEY(`v1`, `v2`, `v3`)
DISTRIBUTED BY RANDOM
PROPERTIES (
"replication_num" = "1",
"in_memory" = "false",
"enable_persistent_index" = "false",
"replicated_storage" = "true",
"compression" = "LZ4"
);

create view v as select * from t0;

alter view v modify column v1 set masking policy mp;
select * from starrocks.policy_references where POLICY_DATABASE="test_apply_policy_to_view";
alter view v modify column v1 unset masking policy;
select * from starrocks.policy_references where POLICY_DATABASE="test_apply_policy_to_view";

alter view v add row access policy rp;
select * from starrocks.policy_references where POLICY_DATABASE="test_apply_policy_to_view";
alter view v drop row access policy rp;
select * from starrocks.policy_references where POLICY_DATABASE="test_apply_policy_to_view";